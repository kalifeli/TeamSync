<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stile del calendario per la modalità chiara -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red70</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#6F6F6F</item>
    </style>

    <!-- Stile del calendario per la modalità scura -->
    <style name="CustomDatePickerDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/red70</item>
        <item name="android:background">#000000</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#AFAFAF</item>
        <item name="android:colorControlActivated">@color/red70</item>
        <item name="android:colorButtonNormal">@color/red70</item>
    </style>
</resources>